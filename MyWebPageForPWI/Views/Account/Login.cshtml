@model MyWebPageForPWI.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_PhotosLayout.cshtml";
}

<section id="logowanie">
    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-sm-6 col-md-6 col-lg-6 col-xs-offset-2 col-sm-offset-3 col-md-offset-3 col-lg-offset-3" style="background-color: #ddd; padding: 50px; border-radius: 12px;">

                <div style="text-align: center">
                    <img src="~/Content/Images/user.png" style=" height: 25%;width:25%" alt="" />
                </div>
                @if (!Request.IsAuthenticated)
                {
                    using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div id="text-danger">
                            @Html.ValidationMessage("loginerror", "")
                        </div>
                        <div class="row " style="padding-top: 10px;">
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <p class="text-muted">@Html.LabelFor(o => o.Email)</p>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                @Html.TextBoxFor(o => o.Email, new { @class = "form-control", @placeholder = @Resource.Email })
                                <div class="text-danger">
                                    @Html.ValidationMessageFor(o => o.Email)
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <p class="text-muted">@Html.LabelFor(o => o.Password)</p>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 ">
                                @Html.PasswordFor(o => o.Password, new { @class = "form-control", @placeholder = @Resource.Haslo })
                                <div class="text-danger ">
                                    @Html.ValidationMessageFor(o => o.Password)
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <p class="text-muted">@Html.LabelFor(m => m.RememberMe)</p>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked", @class = "checkbox" })
                                <div class="text-danger">
                                    @Html.ValidationMessageFor(o => o.Password)
                                </div>
                            </div>
                        </div>

                        <div class="row" style="text-align: center">
                            <div>
                                <button type="submit" class="btn btn-default">@Resource.Zaloguj</button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="jumbotron" style="text-align: center;margin-top:50px">
                        <h2 class="text-danger">Juz jestes zalogowany</h2>
                    </div>
                }
                    
                </div>
            </div>
        </div>
    </section>



               
